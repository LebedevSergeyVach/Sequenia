<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash screen theme. -->
    <style name="Theme.MyApp.SplashScreen" parent="Theme.SplashScreen">
        <item name="colorOnPrimary">@color/splash_screen</item>
        <item name="windowSplashScreenBackground">@color/splash_screen</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Sequenia</item>
        <item name="android:statusBarColor">@color/splash_screen</item>
    </style>

    <!-- Snackbar -->
    <style name="SnackbarAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_in_snackbar</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out_snackbar</item>
    </style>
</resources>
